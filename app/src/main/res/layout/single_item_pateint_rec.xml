<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:background="@drawable/item_border_patient_back">

        <ImageView
            android:id="@+id/img_pharma"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/pharma_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/pharma_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pharmacy Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_pharma"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance 2km"
            android:textColor="#B2B2B2"
            android:textSize="13sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pharma_name"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</RelativeLayout>