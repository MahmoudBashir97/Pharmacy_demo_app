<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ChooseStateScreenFragment"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pharmacy"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="117dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login as"
                android:textColor="#000000"
                android:textStyle="normal"
                android:textSize="25sp"
                android:layout_marginTop="53dp" />

            <Button
                android:id="@+id/to_pharma_btn"
                android:layout_width="277dp"
                android:layout_height="60dp"
                android:text="pharmacy"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:background="@drawable/back_pharmacy_btn"
                android:layout_marginTop="39dp" />

            <Button
                android:id="@+id/to_delivery_btn"
                android:layout_width="277dp"
                android:layout_height="60dp"
                android:text="delivery"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:background="@drawable/back_delivery_btn"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/to_patient_btn"
                android:layout_width="277dp"
                android:layout_height="60dp"
                android:text="patient"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="22sp"
                android:background="@drawable/back_patient_btn"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </RelativeLayout>
</layout>